<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Formulario de Registro"
        android:layout_height="wrap_content"
        android:id="@+id/tituloFormulario"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres:"
        android:id="@+id/textView2"
        android:textSize="28dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:ems="10"
        style="@android:style/Animation.InputMethod"
        android:id="@+id/editTextNombres"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <EditText
        style="@android:style/Animation.InputMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:ems="10"
        android:id="@+id/editTextApellidos"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Nacimiento:"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextFechaNacimiento"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefono:"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextTelefono"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grupo SanguÃ­neo-RH"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGrupoSanguineo"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genero:"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dialog"
        android:entries="@array/genero" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado Civil:"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"

        android:entries="@array/estadocivil"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ocupacion:"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/ocupaciones"
        android:id="@+id/spinner3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nivel de Educacion:"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/nivelEducativo"
        android:id="@+id/spinner4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonregistrar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/botonregistrar" />
</LinearLayout>